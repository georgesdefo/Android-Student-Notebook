<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VideoRecorder" >

    <LinearLayout
        android:id="@+id/lv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lv3"
        android:layout_alignTop="@+id/lv2"
        android:orientation="vertical" >

        <Button
            android:id="@+id/startv"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="@string/startv" />

        <Button
            android:id="@+id/stoptv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stopv" />

        <Button
            android:id="@+id/startrev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/startreview" />

        <Button
            android:id="@+id/stoprev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stopreview" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp"
        android:orientation="vertical" >

        <VideoView
            android:id="@+id/vView"
            android:layout_width="275dp"
            android:layout_height="177dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="185dp" >
        
        <ListView
            android:id="@+id/listView1"
            android:layout_width="386dp"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp" >
        
    </ListView>
    
        
     </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lv2"
        android:layout_marginBottom="73dp"
        android:layout_toLeftOf="@+id/lv2"
        android:layout_toRightOf="@+id/lv1"
        android:text="TextView" />

</RelativeLayout>